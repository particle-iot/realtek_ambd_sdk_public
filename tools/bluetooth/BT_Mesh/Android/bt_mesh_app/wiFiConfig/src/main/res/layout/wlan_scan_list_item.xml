<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/wifi_list_items"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="4dip"
	android:paddingRight="12dip" >
	
    <ImageView
		    android:id="@+id/wifi_list_item_status"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:paddingTop="12dip"
		    android:visibility="gone"/>
    
    <!--     android:layout_marginLeft="10dip" 
       android:layout_toRightOf="@+id/wifi_list_item_status"
       -->
    
	<TextView android:id="@+id/wifi_list_item_upper"
		android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dip"
		android:textSize="18sp"
		android:maxLines="2" 
		android:textColor="#323232"
		android:paddingTop="6dip"
		android:paddingRight="2dip" />
	<LinearLayout
	    android:id="@+id/linear1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/wifi_list_item_upper"
	    android:layout_marginLeft="15dip" 
	    android:orientation="horizontal">
		<TextView android:id="@+id/wifi_list_item_below"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="2dip"
			android:textSize="14sp"
			android:maxLines="2" 
			android:textColor="#803399FF"/>
		
		<TextView android:id="@+id/wifi_list_item_rssi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dip"
			android:paddingRight="2dip"
			android:maxLines="2" 
			android:textColor="#80808FF0"
			android:visibility="gone"/>
		
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/linear2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:orientation="horizontal"
	    android:paddingTop="6dip">
		
	    <!--     -->
	    <ImageView
		    android:id="@+id/wifi_list_item_encrypt"
			android:layout_marginLeft="10dip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		<ImageView
		    android:id="@+id/wifi_list_item_strength"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
		
		
	</LinearLayout>
</RelativeLayout>

