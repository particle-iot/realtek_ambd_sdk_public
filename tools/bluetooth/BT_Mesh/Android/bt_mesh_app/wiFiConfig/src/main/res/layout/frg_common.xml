<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TabBaseFragment">

    <GridView
        android:id="@+id/mesh_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"
        android:gravity="fill_horizontal"
        android:verticalSpacing="@dimen/gridview_spacing"
        android:horizontalSpacing="@dimen/gridview_spacing"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_lighton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/light_on"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"

        app:backgroundTint="@android:color/holo_blue_light"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_lightoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/light_off"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"

        app:backgroundTint="@android:color/holo_blue_light"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/disconnect"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"

        app:backgroundTint="@android:color/holo_blue_light"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:elevation="6dp"
        app:backgroundTint="@android:color/holo_blue_light"
        app:pressedTranslationZ="16dp"/>
